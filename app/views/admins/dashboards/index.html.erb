<div class="container">
  <table border="3">
    <thead>
      <tr>
        <th>Document name</th>
        <th>Download Link</th>
         <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @documents.each do |document| %>
        <tr>
          <td><%= link_to document.name, document_path(document.id) %></td>
          <td><%= link_to "Download", document.attachment_url %></td>
          <td><%= document.status %></td>
          <td><%= link_to "Delete", admins_document_path(document), method: :delete, confirm: "Are you sure you want to delete #{document.name}?" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
