<div class="container-1">
  <%= form_for @document, html: {multipart: true} do |f| %>
    <%= render "shared/error_messages", object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control form-group" %>
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control form-group" %>
      <%= f.label :attachment %>
      <%= f.file_field :attachment, accept: ".pdf, .docx", class: "form-group" %>
      <%= f.select :category_id, @categories, class: "form-group" %>
      <br>
      <%= f.submit "Save", class: "btn btn-primary form-group" %>
    <% end %>
</div>
